<div class="container">
<head><script type="text/javascript">
  $(document).ready(function() {
    /* Activating Best In Place */
    jQuery(".best_in_place").best_in_place();
  });
</script>
<h1>Class Lookup Data</h1></head>
  <body>
    <table class="table table-hover">
      <thead>
        <tr>
          <th width="20%" class="section">Name</th>
          <th width="20%" class="section">Classification</th>
          <th width="50%" class="section">Icon URL</th>
          <th width="10%" class="section"></th>
        </tr>
      </thead>
      <tbody>
        <% @lookups.each do |lookup| %>
          <tr>
              <td><%= best_in_place lookup, :name, :as => :input, :inner_class => 'inline'  %></td>
              <td><%= best_in_place lookup, :classification, :as => :select, :collection => Hash[Lodestone::CLASSIFICATIONS.map{ |c| [c,c]}], :inner_class => 'inline' %></td>
              <td><%= best_in_place lookup, :icon_url, :as => :input, :inner_class => 'inline'  %></td>
              <td><%= link_to "Destroy", lookup, data: {confirm: 'Are you sure?'}, :method => :delete, class: "btn btn-danger btn-xs" %></td>              
          </tr>
        <% end %>
      </tbody>
    </table>
  </body>
</div>