<h4><%= backchain(@topic.section_id) %></h4>
  <div class="container">

 <div class=" panel panel-default">
      <div class="panel-heading" align="center">
        <h1><%= @topic.title %></h1>
      </div>
<table class="table">

  <% for post in @posts %>
    <tr>
      <td width="20%"><%= post.user.lodestone.name %> <BR/><BR/> <%= image_tag post.user.lodestone.avatar %></td>
      <td width="80%"><%= post.text %></td>
      <% if post.user.has_role?("admsn") || current_user == post.user %>
        <td><%= link_to "Edit", edit_post_path(post) %></td>
        <td><%= link_to "Delete", post, :confirm => 'Are you sure?', :method => :delete %></td>
      <% end %>
    </tr>
  <% end %>
</table>
</div>
<p><%= link_to "New Post", "/posts/new?topic=#{@topic.id}" %></p>
</div>