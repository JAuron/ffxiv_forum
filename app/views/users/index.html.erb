<div class="container">
<head><h1>All Users</h1></head>
  <body>
    <table class="table table-hover">
      <thead>
        <tr>
          <th width="30%" class="section">Name</th>
          <th width="30%" class="section">Roles</th>
          <th width="20%" class="section">Joined</th>
          <th width="10%" class="section"># Posts</th>
          <th width="10%" class="section"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.lodestone.name, user_path(user.id)%></td>
            <td>
              <% user.roles.uniq.each do |role| %>
                <span class="badge badge-danger"> <%= role.name.humanize %></span>
              <% end %>
            </td>
            <td><%= time_formatter(user.created_at) %></td>
              
            <td><%= Post.where(user_id: user.id).count %></td>
            <td><%= link_to "Destroy", user, data: {confirm: 'Are you sure?'}, :method => :delete, class: "btn btn-danger btn-xs" %></td>              
          </tr>
        <% end %>
      </tbody>
    </table>
  </body>
</div>